@using SonOfCod.ViewModels
@using System.Security.Claims
@model LoginViewModel
@{
    ViewData["Title"] = "Son of Cod Seafood - Administrator";
}

<div class="foreground sign-up">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="text-center">
            <h3>Sign in as @User.Identity.Name</h3>

            @using (Html.BeginForm("LogOff", "Admin"))
            {
                <input type="submit" class="btn btn-default" value="Log out" />
            }
        </div>
    }
    else
    {
        <h2>Log in</h2>
        <hr />
        @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "required" })
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
            </div>

            <input type="submit" value="Log in" class="btn btn-primary btn-block" />
        }
        <hr />
        @Html.ActionLink("Register new admin account", "Register", "Admin")
    }
</div>

