@using SonOfCod.ViewModels
@using System.Security.Claims
@model LoginViewModel
@{
    ViewData["Title"] = "Son of Cod Seafood - Administrator";
}

@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>

    @using (Html.BeginForm("LogOff", "Admin"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    @using (Html.BeginForm("Register", "Admin", FormMethod.Get))
    {
        <input type="submit" value="Register" class="btn btn-primary btn-lg" />
    }

    <h2>Or Log in</h2>
    <hr />
    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
    {
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username)

        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)

        <input type="submit" value="Log in" class="btn btn-default" />
    }
}

